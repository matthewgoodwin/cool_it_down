<div>
  <%= simple_form_for([bev, order], remote: true) do |f| %>
    <%= f.input :quantity, collection:[1,2,3,4,5,6], label: false, prompt: "quantity", input_html: { class: "clear-order" } %>
    <%= f.input :zone, collection: @zone_op.sort_by.each { |z| [z] }, label: false, prompt: "tables", input_html: { class: "clear-order" } %>
    <!--sort_by can replace the each iterator-->
    <%= f.input :duration, collection:[10,13,15,18,20,23,25,30], prompt: "intervals in minutes", label: false, input_html: { class: "clear-order" } %>
      <%= f.button :submit, "create order", class: "btn btn-primary no-decor" %>
  <% end %>
</div>

