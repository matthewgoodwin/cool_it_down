<!-- will appear on lounges/receipts.html.erb-->
<div class="flex flex-direction flex-wrap receipt-div align-i-cent text-a-cent space-b ajax-order" id="rec-dv">
  <% @time = order.created_at %>
  <div class="flex-item hidden-xs">
    <% order.user.photo.present? ? avatar_url = order.user.photo.url(:bright_face) : avatar_url = "user-icon.png" %>
    <!-- ^ added `.url(:brightface)` from the `photo_uploader` class-->
    <div class="user-avatar logo-img light-shadow" style="background-image: url('<%= image_path avatar_url %>'); background-size: cover; width: 50px; height: 50px; border-radius: 50%; background-position: center;"></div>
  </div>
    <div class="flex-item"><%= order.user.fname %></div>
    <div class="flex-item"><%= order.quantity %></div>
    <div class="flex-item"><%= order.zone %></div>
    <div class="flex-item"><%= order.bev.name %></div>
    <div class="flex-item"><%= @time.strftime("%H:%M")%></div>
    <div class="flex-item"><%= link_to order_path(order), method: :delete do %>
    <i class="fa fa-trash" aria-hidden="true"></i><% end %>
    </div>
</div>
