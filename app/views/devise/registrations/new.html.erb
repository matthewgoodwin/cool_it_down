<div class="container flex space-a">
  <div class="devise-con">
    <h2>Sign up</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :username, required: false, label: "username", placeholder: "username" %>
        <%= f.input :first_name, required: true, label:"first name", placeholder: "first name" %>
        <%= f.input :last_name, required: true, autofocus: true, label: "last name", placeholder: "last name" %>
        <%= f.input :email, required: true, autofocus: true, label: "email", placeholder: "email@domain" %>
        <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        <%= f.input :password_confirmation, required: true %>
        <%= f.input :photo, label: "User Avatar" %>
        <%= f.input :photo_cache, as: :hidden %>
      </div>
        <!--check readme about photo upload form 5-5-2017-->
      <div class="form-actions">
        <%= f.button :submit, "Sign up" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
