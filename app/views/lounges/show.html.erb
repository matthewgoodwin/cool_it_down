<div class="container">
  <div class="bev-action">
    <div>
      <a href="" data-toggle="modal" data-target="#create-bev" >
        <div class="btn btn-primary">create beverage</div>
      </a>
    </div>
  </div>
  <div class="lounge-container">
    <h1><%= @lounge.name %></h1>
    <h4>Lounge#show</h4>
    <% @lounge.bevs.each do |bev|%>
      <div class="bev-div">
        <%= link_to bev_path(bev), class: "bev-path-link" do %>
          <div class="bev-body">
            <h4><%= bev.name %></h4>
            <!--description here -->
            <p>style: <%= bev.style %></p>
          </div><!--end of bev body-->
        <% end %><!-- end of path-->
         <!--  <div class="bev-cost">
            <p>cost</p>
          </div> end of cost-->
          <div class="bev-action">
            <div>
              <a href="" data-toggle="modal" data-target="#bev-form-<%= bev.id %>" >
                <div class="btn btn-primary">$<%= bev.cost %></div>
              </a>
            </div>
          </div>
          <!--begin modal of review partial-->
            <div class="modal fade bev-mod-style" id="bev-form-<%= bev.id %>">
              <div class="modal-dialog" role="document"><!--aligns the modal document-->
                <div class="modal-content">
                  <div class="modal-header">
                    <h3 class="bev-modal-header">Order for '<%= bev.name %>'</h3>
                  </div><!--end of header-->
                  <div class="modal-body">
                    <%= render "orders/order_form", bev: bev, order: @order %>
                  </div><!--end of modal-body-->
                </div><!--end of modal-content-->
              </div><!--end of modal-dialog-->
            </div><!--end of modal-->
      </div> <!-- end of bev-div -->
      <!-- The README FILE-->
    <% end %><!-- end of loun bev loop -->
          <!--begin modal of review partial-->
            <div class="modal fade bev-mod-style" id="create-bev">
              <div class="modal-dialog" role="document"><!--aligns the modal document-->
                <div class="modal-content">
                  <div class="modal-header">
                    <h3 class="create-bev-modal-header">create new beverage</h3>
                  </div><!--end of header-->
                  <div class="modal-body">
                    <%= render "bevs/bevs_form", lounge: @lounge, bev: @bev %>
                  </div><!--end of modal-body-->
                </div><!--end of modal-content-->
              </div><!--end of modal-dialog-->
            </div><!--end of modal-->
  </div><!-- end of the loung-con -->
</div><!--container-->


