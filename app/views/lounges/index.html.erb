<div class="container">
  <div class="lounge-container shell-con">
    <h3>lounge#index</h3>
      <% @lounges.each do |l| %>
        <%= link_to lounge_path(l), class: "no-decor" do %>
          <div class="lounge-index-flex flex flex-direction flex-wrap align-i-cent text-a-cent space-b">
            <div class="lounge-index-body">
                <h4><%= l.name %></h4>
            </div><!--end of lounge body-->
            <div class="">
              <h6 class="lounge-index-action flex-item2"><%= l.city %></h6>
            </div><!--end of lounge city-->
          </div><!--end of flexbox-->
        <% end %><!-- end of link path-->
      <% end %><!--end of @lounges-->
  </div><!--end of lounge-contianer-->
</div><!--end of container-->
