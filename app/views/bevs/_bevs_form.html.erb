<%= simple_form_for([lounge, bev]) do |f| %>
  <%= f.input :name, label: false, placeholder:"name" %>
  <%= f.input :desc, label: false, placeholder:"description" %>
  <%= f.input :cat, label: false, placeholder:"category" %>
  <%= f.input :region, label: false, placeholder:"region" %>
  <%= f.input :nation, label: false, placeholder:"country" %>
  <%= f.input :style, label: false, placeholder:"style" %>
  <%= f.input :cost, label: false, placeholder:"cost" %>

    <%= f.button :submit, "create beverage", class: "btn btn-primary no-decor btn-grad-light light-shadow w-auto-100" %>

<% end %>
